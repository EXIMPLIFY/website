{
  "env": {
    "browser": true,
    "es2021": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react", "sonarjs", "promise", "prettier"],
  "extends": [
    "airbnb",
    "plugin:react/recommended",
    "plugin:sonarjs/recommended",
    "plugin:promise/recommended",
    "next",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "prettier/prettier": ["off", { "endOfLine": "auto" }],
    "linebreak-style": [0, "error", "windows"],
    "comma-dangle": ["error", "never"],
    "quotes": ["error", "single", { "avoidEscape": true }],
    "indent": ["error", 2, { "SwitchCase": 1 }],
    "no-trailing-spaces": "error",
    "semi": ["error", "always"],
    "no-multiple-empty-lines": [
      "error",
      { "max": 1, "maxEOF": 1, "maxBOF": 1 }
    ],
    "eol-last": ["error", "always"],
    "no-multi-spaces": "error",
    "object-curly-spacing": ["error", "always"],
    "no-param-reassign": ["error", { "props": false }],
    "no-extra-parens": "off",
    "no-shadow": "off",
    "max-len": ["error", { "code": 140, "ignoreStrings": true }],
    "no-bitwise": "error",
    "no-unused-expressions": [
      "error",
      { "allowShortCircuit": true, "allowTernary": true }
    ],
    "camelcase": "warn",
    "no-nested-ternary": "error",
    "arrow-parens": ["error", "as-needed"],
    "no-console": "off",
    "complexity": "error",
    "max-depth": ["error", 3],
    "max-lines-per-function": ["error", 200],
    "max-lines": "error",
    "max-params": ["error", 4],
    "default-param-last": "error",
    "jsx-quotes": ["error", "prefer-single"],
    "react/prop-types": "off",
    "react/jsx-fragments": "error",
    "react/jsx-curly-newline": "warn",
    "react/state-in-constructor": "warn",
    "react/static-property-placement": "warn",
    "react/jsx-props-no-spreading": ["warn", { "exceptions": ["Component"] }],
    "react/jsx-filename-extension": "off",
    "react/react-in-jsx-scope": "off",
    "react/no-array-index-key": "error",
    "react/no-unescaped-entities": "off",
    "react/destructuring-assignment": ["error", "always"],
    "react/prefer-stateless-function": "error",
    "react/no-unknown-property": "off",
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "off",
    "react/function-component-definition": [
      "error",
      {
        "namedComponents": "arrow-function",
        "unnamedComponents": "arrow-function"
      }
    ],
    "react/self-closing-comp": [
      "error",
      {
        "component": true,
        "html": true
      }
    ],
    "sonarjs/no-nested-template-titerals": "off",
    "import/prefer-default-export": "off",
    "import/extensions": "off",
    "import/no-anonymous-default-export": [
      "error",
      { "allowArrowFunction": true }
    ],
    "import/no-extraneous-dependencies": [
      "error",
      { "optionalDependencies": false }
    ],
    "jsx-ally/label-has-associated-control": "off",
    "jsx-ally/no-static-element-interactions": "off",
    "jsx-ally/click-events-have-key-events": "off",
    "jsx-ally/control-has-associated-label": "off",
    "jsx-ally/no-noninteractive-element-interactions": "off",
    "jsx-ally/alt-text": "off",
    "promise/prefer-await-to-then": "warn"
  },
  "settings": {
    "react": { "version": "detect" }
  }
}
